@page
@model Zadatak1.Pages.Partneri.CreateModel
@{
}
<br>
<h2>New Partneri</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">FirstName</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="firstname" value="@Model.clientInfo.FirstName">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">LastName</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="lastname" value="@Model.clientInfo.LastName">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@Model.clientInfo.Address">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PartnerNumber</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="partnernumber" value="@Model.clientInfo.PartnerNumber">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">CroatianPIN</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="croatianpin" value="@Model.clientInfo.CroatianPIN">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PartnerTypeID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="partnertypeid" value="@Model.clientInfo.PartnerTypeID">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">CreatedAtUtc</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="utc" value="@Model.clientInfo.CreatedAtUtc">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">CreatedByUser</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="user" value="@Model.clientInfo.CreatedByUser">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">IsForeign</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="foreign" value="@Model.clientInfo.IsForeign">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ExternalCode</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="code" value="@Model.clientInfo.ExternalCode">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Gender</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="gender" value="@Model.clientInfo.Gender">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>